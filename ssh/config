include ~/.dotfiles/ssh/hosts/*.cfg

Host *+*
  ProxyCommand ssh -W $(echo %h | sed 's/^.*+//;s/^\([^:]*$\)/\1:22/') $(echo %h | sed 's/+[^+]*$//;s/\([^+%%]*\)%%\([^+]*\)$/\2 -l \1/;s/:\([^:+]*\)$/ -p \1/')

  ########################
 # Configuraci√≥n global #
########################
Host *
User quarkex
IdentityFile ~/.ssh/quarkex
ForwardAgent yes
AddKeysToAgent yes
AddressFamily inet
